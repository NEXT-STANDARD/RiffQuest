  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist-server",
    "rootDir": "./server",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "lib": ["ES2020"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
